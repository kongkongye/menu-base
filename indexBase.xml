<menu xmlns="http://xsd.kongkongye.com/MenuMod-1.0.0.xsd" server="false" title="基础菜单">
    <lines>
        <line>$5+-- $3$l时间 $5--+</line>
        <line alignCenter="spaceAround">
            <button value="/time set 6000" hover="设置为白天">白天</button>
            <button value="/time set 18000" hover="设置为夜晚">夜晚</button>
        </line>

        <line separate="true">$5+-- $3$l天气 $5--+</line>
        <line alignCenter="spaceAround">
            <button value="/weather clear" hover="设置为晴天">晴天</button>
            <button value="/weather rain" hover="设置为下雨">下雨</button>
        </line>

        <line separate="true">$5+-- $3$l游戏模式 $5--+</line>
        <line alignCenter="spaceBetween">
            <button value="/gamemode 0" hover="设置为生存模式">生存</button>
            <button value="/gamemode 1" hover="设置为创造模式">创造</button>
            <button value="/gamemode 2" hover="设置为冒险模式">冒险</button>
            <button value="/gamemode 3" hover="设置为旁观模式">旁观</button>
        </line>

        <line separate="true">$5+-- $3$l游戏难度 $5--+</line>
        <line alignCenter="spaceBetween">
            <button value="/difficulty 0" hover="怪物都不会出生">和平</button>
            <button value="/difficulty 1" hover="设置为简单难度">简单</button>
            <button value="/difficulty 2" hover="设置为普通难度">普通</button>
            <button value="/difficulty 3" hover="设置为困难难度">困难</button>
        </line>

        <line separate="true">$5+-- $3$l其它设置 $5--+</line>
        <line alignCenter="spaceBetween">
            <button value="/gamerule keepInventory true" hover="死亡不会掉落物品">死亡不掉落</button>
            <button value="/gamerule keepInventory false" hover="死亡会掉落物品">死亡掉落</button>
        </line>
    </lines>
</menu>